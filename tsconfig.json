{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["DOM","es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "metagpt/*": ["src/*"],
      "metagpt": ["src/index.ts"],
    },
  },
  "exclude": ["node_modules"],
  "include": ["src", "tests", "examples"]
}